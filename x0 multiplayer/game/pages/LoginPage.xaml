<Page x:Class="game.pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="LoginPage">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.TextAlignment="Center" Width="200">
            <TextBlock Text="Connect as ..." FontSize="25"></TextBlock>
            <TextBlock Text="username" FontStyle="Italic"></TextBlock>
            <TextBox x:Name="Login"/>
            <Button x:Name="btnConnect" BorderBrush="Transparent" Content="Connect" Background="White" Foreground="#3099c5" HorizontalAlignment="Center" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Page>
